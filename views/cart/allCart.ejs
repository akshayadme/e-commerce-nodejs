<%- include("../partials/header") %> <%- include("../partials/navbar")%>

<div class="container-fluid my-5">
  <div class="row">
    <div class="col-md-10 col-11 mx-auto">
      <div class="row gx-3">
        <!-- left side div -->
        <div
          class="
            col-md-12 col-lg-8 col-11
            mx-auto
            main_cart
            mb-lg-0 mb-5
            shadow
          "
        >
          <h2 class="p-4 fw-bold">My Cart(2)</h2>
          <hr />
          <div class="card my-2 p-4 border-0">
            <div class="row">
              <!-- cart images div -->
              <div
                class="
                  col-md-5 col-11
                  mx-auto
                  bg-light
                  d-flex
                  justify-content-center
                  align-items-center
                  shadow
                  product_img
                "
              >
                <img
                  src="https://images.pexels.com/photos/6395420/pexels-photo-6395420.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260"
                  class="img-fluid"
                  alt="cart img"
                />
              </div>
              <!-- cart product details -->
              <div class="col-md-7 col-12 my-2">
                <div class="row">
                  <!-- product name -->
                  <div class="col-8 card-title">
                    <h1 class="mb-4 product_name text-capitalize fw-bold">
                      Addidas shoes hello good
                    </h1>
                    <p class="mb-2">Shirt: Blue</p>
                    <p class="mb-2">Color: Blue</p>
                    <p class="mb-2">Size: M</p>
                  </div>

                  <!-- quantity increment     -->
                  <div class="col-4 d-flex justify-content-end">
                    <ul class="pagination set_quantity">
                      <li class="page-item">
                        <button
                          class="page-link text-dark"
                          onclick="decrease()"
                        >
                          <i class="fas fa-minus"></i>
                        </button>
                      </li>
                      <li class="page-item">
                        <input
                          class="page-link text-dark text-center textbox"
                          type="text"
                          name=""
                          value="1"
                          id="textbox"
                          disabled
                        />
                      </li>

                      <li class="page-item">
                        <button
                          class="page-link text-dark"
                          onclick="increase()"
                        >
                          <i class="fas fa-plus"></i>
                        </button>
                      </li>
                    </ul>
                  </div>
                </div>
                <!-- remove wishlist & price -->
                <div class="row">
                  <div class="col-5 remove_wish">
                    <button class="btn btn-sm btn-outline-danger">
                      <i class="fas fa-trash-alt"></i> Remove Item
                    </button>
                  </div>
                  <div
                    class="col-4 remove_wish d-flex justify-content-start p-0"
                  >
                    <button class="btn btn-sm btn-outline-warning">
                      <i class="fas fa-heart"></i> Move to Wishlist
                    </button>
                  </div>

                  <div class="col-3 d-flex justify-content-end price_money">
                    <h3>$<span id="itemVal">4000</span></h3>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- second card -->

          <hr />
        </div>
        <!-- right side div -->
        <div class="col-md-12 col-lg-4 col-11 mx-auto mt-lg-0 mt-md-5">
          <div class="right_side p-3 shadow bg-white">
            <h3 class="poduct_name mb-2 text-secondary">PRICE DETAILS</h3>
            <hr />
            <div class="price_indiv d-flex justify-content-between">
              <p>Price(2)</p>
              <p>$ <span>4000</span></p>
            </div>
            <div class="price_indiv d-flex justify-content-between">
              <p>Shipping Charge</p>
              <p>$ 0</p>
            </div>
            <hr />
            <div class="price_indiv d-flex justify-content-between">
              <h5>Total Amount</h5>
              <p>$70000</p>
            </div>
            <hr />
            <button class="btn btn-primary">Place Order</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%-include("../partials/footer")%>

<script>
  function decrease() {
    var item = document.getElementById("textbox");
    console.log(item);
    if (item.value <= 1) {
      item.value = 1;
    } else {
      item.value = parseInt(item.value) - 1;
    }
  }
  function increase() {
    var item = document.getElementById("textbox");
    console.log(item.value);
    if (item.value >= 5) {
      item.value = 5;
    } else {
      item.value = parseInt(item.value) + 1;
    }
  }
</script>
